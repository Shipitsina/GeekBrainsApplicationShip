<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/calc_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/for_calc_land"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/field_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="#FFFFFF"
                android:background="#40000000"/>

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radioButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toTopOf="parent"
                >

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioButtonLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/material_light" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioButtonDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/material_dark" />
            </RadioGroup>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/field_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="50dp"
                android:orientation="horizontal"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/second_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="100dp"
                android:orientation="horizontal"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/third_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="150dp"
                android:orientation="horizontal"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fourth_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="200dp"
                android:orientation="horizontal"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fifth_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="250dp"
                android:orientation="horizontal"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/sixth_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="300dp"
                android:orientation="horizontal"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/thirst_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="100dp"
                android:orientation="vertical"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/second_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="190dp"
                android:orientation="vertical"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/third_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="280dp"
                android:orientation="vertical"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fourth_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_begin="370dp"
                android:orientation="vertical"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fourth_column_end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintGuide_end="130dp"
                android:orientation="vertical"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_7"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_8"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_9"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_6"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_5"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_4"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                app:layout_constraintBottom_toTopOf="@+id/fifth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                app:layout_constraintBottom_toTopOf="@+id/fifth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForNumberButton"
                android:id="@+id/plus_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_minus"
                app:layout_constraintBottom_toTopOf="@+id/fifth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForOperationButton"
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/plus"
                app:layout_constraintBottom_toTopOf="@+id/sixth_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForOperationButton"
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minus"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForOperationButton"
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multiply"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForOperationButton"
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/division"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForOperationButton"
                android:id="@+id/equals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FF0D"
                android:text="@string/equals"
                app:layout_constraintBottom_toTopOf="@+id/sixth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fifth_line_start" />

            <com.google.android.material.button.MaterialButton
                style="@style/MyCoolStyleForOperationButton"
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0000"
                android:text="@string/c"
                app:layout_constraintBottom_toTopOf="@+id/sixth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fifth_line_start" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>