<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/calc_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/for_calc" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#40000000"
                android:backgroundTint="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/field_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/field_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="350dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/second_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="400dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/third_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="450dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fourth_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="500dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fifth_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="550dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/sixth_line_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="600dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/thirst_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/second_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="100dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/third_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="190dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fourth_column_start"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="280dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/fourth_column_end"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_end="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_7"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_8"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_9"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_6"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_5"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/four"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_4"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/one"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                app:layout_constraintBottom_toTopOf="@+id/fifth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                app:layout_constraintBottom_toTopOf="@+id/fifth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/second_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus_minus"
                style="@style/MyCoolStyleForNumberButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_minus"
                app:layout_constraintBottom_toTopOf="@+id/fifth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/second_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plus"
                style="@style/MyCoolStyleForOperationButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/plus"
                app:layout_constraintBottom_toTopOf="@+id/sixth_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fourth_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/minus"
                style="@style/MyCoolStyleForOperationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/minus"
                app:layout_constraintBottom_toTopOf="@+id/fourth_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/third_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                style="@style/MyCoolStyleForOperationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/multiply"
                app:layout_constraintBottom_toTopOf="@+id/third_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/second_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide"
                style="@style/MyCoolStyleForOperationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/division"
                app:layout_constraintBottom_toTopOf="@+id/second_line_start"
                app:layout_constraintEnd_toEndOf="@+id/fourth_column_end"
                app:layout_constraintStart_toStartOf="@+id/fourth_column_start"
                app:layout_constraintTop_toBottomOf="@+id/field_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equals"
                style="@style/MyCoolStyleForOperationButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FF0D"
                android:text="@string/equals"
                app:layout_constraintBottom_toTopOf="@+id/sixth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/third_column_start"
                app:layout_constraintStart_toStartOf="@+id/thirst_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fifth_line_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear"
                style="@style/MyCoolStyleForOperationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF0000"
                android:text="@string/c"
                app:layout_constraintBottom_toTopOf="@+id/sixth_line_start"
                app:layout_constraintEnd_toStartOf="@+id/fourth_column_start"
                app:layout_constraintStart_toStartOf="@+id/third_column_start"
                app:layout_constraintTop_toBottomOf="@+id/fifth_line_start" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings"
                style="@style/MyCoolStyleForOperationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>